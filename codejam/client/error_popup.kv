<ErrorPopup@ModalView>:
    auto_dismiss: False
    size_hint: 0.6, 0.2
    pos_hint: {"x": 0.2 ,"top": 0.9}
    title: "Error Title"
    error_code: "Error Code"
    message: "Error Message"
    BoxLayout:
        size_hint: None, None
        orientation: "vertical"
        Label:
            text: "Error encountered!"
        Widget:
        Label:
            text: root.title
            halign: "left"
        Label:
            text: root.error_code
            halign: "left"
        Label:
            text: root.message
            halign: "left"
        Button:
            text: "Close"
            on_release: root.dismiss()

RootWidget:
    ws: False
    MenuScreen:
        TextInput:
            pos: 200, 500
            size_hint: None, None
            size: 400, 40
            hint_text: 'username'
            multiline: False
            on_text_validate:
                root.username = self.text
        Button:
            pos: 400, 0
            size_hint: None, None
            size: 400, 400
            text: "join room"
            on_release: root.current = 'join'
        Button:
            size_hint: None, None
            size: 400, 400
            text: "create room"
            on_release:
                root.create_room = True
                root.current = 'whiteboard'
                root.create_room = False
    JoinScreen:
        name: 'join'
        TextInput:
            pos: 200, 400
            size_hint: None, None
            size: 200, 40
            hint_text: 'entry code'
            multiline: False
            on_text_validate:
                root.game_id = self.text
        Button:
            pos: 200, 100
            size_hint: None, None
            size: 400, 200
            text: "join room"
            on_release:
                root.current = 'whiteboard'
    WhiteBoardScreen:
        name: 'whiteboard'

