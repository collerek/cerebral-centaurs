<Score>:
    player: ''
    score: 0
    BoxLayout:
        pos_hint: {'top': 0.9, 'right': 1}
        canvas.before:
            Color:
                rgb: (0.5, 0.2, 0.9)
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Label:
            font_size: sp(10)
            text: root.player
            text_size: self.width - dp(10), None
            height: self.texture_size[1]
            halign: 'left'
        Label:
            font_size: sp(15)
            text: str(root.score)
            text_size: self.width - dp(10), None
            height: self.texture_size[1]
            halign: 'right'

<ScoreBoard>:
    game_id: ''
    spacing: dp(10)
    current_turn: 0
    turns_no: 0
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: .2
        padding: dp(5)
        canvas.before:
            Color:
                rgb: .2, .5, .9
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Label:
            id: game_label
            text_size: self.width, None
            halign: 'left'
            text: f"Game: {root.game_id}"
        Label:
            id: turns
            text_size: self.width, None
            size_hint_x: .3
            halign: 'center'
            text: f"{root.current_turn} / {root.turns_no}"
    GridLayout:
        orientation: 'tb-lr'
        rows: 8
        id: scores
        height: self.minimum_height
        spacing: dp(1)
        padding: dp(2)
